<?xml version="1.0" encoding="utf-8" ?>
<form>
    <control name="main_form" entity="Form" script="form_input_name" init="main_form_init">
        <prop Left="29" Top="29" Width="300" Height="150" BackColor="255,150,150,255" ShadowColor="0,0,0,0" Font="GE_FONT" DrawMode="Expand" BackImage="skin\png\dialog.png" />
        <event on_open="main_form_open" />
        <control name="info_label" entity="Label" script="" init="">
            <prop RefCursor="WIN_HELP" Left="24" Top="16" Width="160" Height="24" ShadowColor="0,0,0,0" Text="输入名称：" />
        </control>
        <control name="name_edit" entity="Edit" script="" init="">
            <prop ChangedEvent="true" TextOffsetX="2" Caret="Default" Left="20" Top="50" Width="260" Height="30" ShadowColor="0,0,0,0" Cursor="WIN_IBEAM" TabStop="true" />
            <event on_enter="on_name_edit_enter" />
        </control>
        <control name="ok_btn" entity="Button" script="" init="">
            <prop Left="50" Top="100" Width="80" Height="30" BackColor="255,192,192,192" ShadowColor="0,0,0,0" Text="确定" TabStop="true" />
            <event on_click="ok_btn_click" />
        </control>
        <control name="cancel_btn" entity="Button" script="" init="">
            <prop Left="170" Top="100" Width="80" Height="30" BackColor="255,192,192,192" ShadowColor="0,0,0,0" Text="取消" TabStop="true" />
            <event on_click="cancel_btn_click" />
        </control>
    </control>
</form>
